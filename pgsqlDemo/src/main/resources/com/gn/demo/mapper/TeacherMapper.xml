<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gn.demo.mapper.TeacherMapper">
    <select id="selectTeacherById"
            parameterType="java.lang.Integer"
            resultType="com.gn.demo.dto.Teacher">
        select * from teacher where id = #{id}
    </select>

    <select id="selectTeachers"
            resultType="com.gn.demo.dto.Teacher">
        select t.id, t.name, t.number from teacher t
    </select>

    <select id="selectTeacherByName"
            parameterType="java.lang.String"
            resultType="com.gn.demo.dto.Teacher">
        select * from teacher where name = #{name}
    </select>

    <select id="select"
            parameterType="com.gn.demo.dto.Teacher"
            resultType="com.gn.demo.dto.Teacher">
        select * from teacher where 1 = 1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
        <if test="name != null and name != ''">
            and name = #{name}
        </if>
        <if test="number != null and number != ''">
            and number = #{number}
        </if>
    </select>

    <insert id="addTeacher" parameterType="com.gn.demo.dto.Teacher">
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="BEFORE">
            select nextval('seq_id')
        </selectKey>
        INSERT INTO teacher (id, name, number)
        VALUES (#{id}, #{name}, #{number});
    </insert>

    <update id="updateById" parameterType="com.gn.demo.dto.Teacher">
        UPDATE teacher
        SET name = #{name}, number = #{number}
        WHERE id = #{id};
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from teacher where id = #{id}
    </delete>

    <!--新增/修改-->
    <insert id="upSert" parameterType="com.gn.demo.dto.Teacher">
        insert into teacher (id, name, number)
        values(#{id}, #{name}, #{number})
        on conflict(id)
        do update set name = #{name}, number = #{number};
    </insert>
</mapper>